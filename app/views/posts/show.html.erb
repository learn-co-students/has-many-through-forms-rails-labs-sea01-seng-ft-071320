<h1><%= @post.title %></h1>
<br>

<p><%= @post.content %></p>
<br>

<h3>Comment Below</h3>
<br>

<ul>
<% @post.comments.each do |comment| %>
  <li><%= "#{comment.user.username} says: #{comment.content}"%>
<% end %>
</ul>

<% @comment = Comment.new %>

<%= form_for @post.comments.build do |f| %>
  <%= f.hidden_field :post_id, value: @post.id %>

  <%= collection_select :comment, :user_id, User.all, :id, :username %>
  <br>

  <%= f.fields_for :user, User.new do |u| %>
    <%= u.label :username %>
    <%= u.text_field :username %>
  <% end %>

  <%= f.text_area :content %>
  <br>

  <%= f.submit %>
<% end %>
