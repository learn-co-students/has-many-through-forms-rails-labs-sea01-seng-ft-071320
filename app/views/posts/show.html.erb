<h1><%= @post.title %></h1>
<br>

<p><%= @post.content %></p>
<br>

<h3>Comment Below</h3>
<br>

<h3>Categories:</h3>
<ul>
  <% @post.categories.each do |category| %>
    <li><%= category.name %></li>
  <% end %>
</ul>

<h1>List of Users Who Have Commented:</h1>
<ul>
  <% @post.comments.map(&:user).uniq.each do |user| %>
    <li><%= link_to user.username, user %></li>
  <% end %>
</ul>

<ul>
<% @post.comments.each do |comment| %>
  <li><%= "#{comment.user.username} says: #{comment.content}"%>
<% end %>
</ul>

<% @comment = Comment.new %>

<%= form_for @post.comments.build do |f| %>
  <%= f.hidden_field :post_id, value: @post.id %>

  <%= f.collection_select :user_id, User.all, :id, :username %>

  <%= f.fields_for :user, User.new do |u| %>
    <%= u.label :username %>
    <%= u.text_field :username %>
  <% end %>

  <%= f.text_area :content %>
  <br>

  <%= f.submit %>
<% end %>
